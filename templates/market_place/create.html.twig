{% block scripts %}

    {% if update %}
        <script>
            window.onload = function () {
                $('#description').val({{ product.description|json_encode|raw }});
            }
        </script>
    {% endif %}
    <script src="{{ asset('js/product.js') }}"></script>
{% endblock %}
